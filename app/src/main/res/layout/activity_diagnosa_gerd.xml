<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f37778"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".DiagnosaGerd">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:longClickable="false">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            app:layout_constraintGuide_percent="0.04"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="154dp"
            android:layout_height="122dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:srcCompat="@drawable/det" />

        <LinearLayout
            android:layout_width="369dp"
            android:layout_height="557dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/bgcorner1"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5">

            <CheckBox
                android:id="@+id/dada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/molengo"
                android:text="Rasa nyeri dan terbakar di dada"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/pahit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Rasa pahit dibagian belakang mulut dan kerongkongan"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/baunafas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Bau nafas tidak sedap"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/sulitnelan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Sulit menalan makanan terus-menerus"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/batuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Batuk Kronis"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/panasnelan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Merasakan panas dalam ketika menelan makanan"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/suaraserak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Suara Serak"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/asma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Asma"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/tenggorok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Sakit Tenggorokan"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/demam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Demam"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/diare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Diare"
                android:textColor="@color/ic_launcher_background" />

            <CheckBox
                android:id="@+id/mual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:text="Mual"
                android:textColor="@color/ic_launcher_background" />

            <Button
                android:id="@+id/deteksi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deteksi Gejala" />

            <TextView
                android:id="@+id/kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/molengo"
                android:textColor="@color/ic_launcher_background"
                android:textSize="12sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>